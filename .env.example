# AURA Configuration Template
# Copy this to .env and fill in your actual values

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: OpenRouter API Key (for future features)
# OPENROUTER_API_KEY=your_openrouter_key_here

# Supermemory API Key (for long-term memory + skill sharing)
# Get your key from: https://console.supermemory.ai
SUPERMEMORY_API_KEY=your_supermemory_api_key_here

# Voice Settings
VOICE_LANGUAGE=en-US
WAKE_WORD=aura

# User Preferences
USER_NAME=Sir

# User ID for multi-user deployment (unique per user)
AURA_USER_ID=your_unique_user_id
